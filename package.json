{
  "name": "gw-launcher",
  "version": "1.0.0",
  "description": "Minecraft No-Premium and Premium Launcher",
  "main": "main.js",
  "author": "RottenBone Studio",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.rottenbonestudio.gwlauncher",
    "productName": "GW Launcher",
    "copyright": "Â© 2025 RottenBone Studio",
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "src/icon.ico",
      "signAndEditExecutable": true
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GW Launcher"
    },
    "files": [
      "main.js",
      "src/**/*",
      "preload.js",
      "assets/**/*"
    ],
    "extraFiles": [
      {
        "from": "src/python/dist/gwlauncher_backend.exe",
        "to": "gwlauncher_backend.exe"
      },
      {
        "from": "assets/versions",
        "to": "assets/versions"
      }
    ]
  },
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "dotenv": "^17.2.0"
  }
}