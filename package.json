{
  "name": "gw-launcher",
  "version": "1.0.0",
  "description": "Minecraft No-Premium Launcher",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.rottenbonestudio.gwlauncher",
    "productName": "GW Launcher",
    "win": {
      "target": "nsis",
      "icon": "src/icon.ico"
    },
    "files": [
      "main.js",
      "src/**/*",
      "python/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^24.0.0"
  }
}
